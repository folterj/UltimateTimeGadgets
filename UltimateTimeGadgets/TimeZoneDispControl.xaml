<my:TimeControl x:Class="UltimateTimeGadgets.TimeZoneDispControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:my="clr-namespace:UltimateTimeGadgets"
             mc:Ignorable="d" d:DesignHeight="20" d:DesignWidth="200">
	<Grid>
		<Border CornerRadius="5" Name="textBorder">
			<Viewbox>
				<TextBlock Text="{Binding timezonestring}" Name="timezoneText" Padding="0" TextAlignment="Center" />
			</Viewbox>
		</Border>
	</Grid>
</my:TimeControl>
