<my:TimeControl x:Class="UltimateTimeGadgets.AnalogClockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:my="clr-namespace:UltimateTimeGadgets" 
             mc:Ignorable="d" Width="100" Height="100">
    <Grid SizeChanged="Grid_SizeChanged">
		<Image Name="MainImage" Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality" />
		<Line Name="secHand" Stroke="Black" X1="50" X2="50" Y1="50" Y2="10" StrokeThickness="1" />
		<Line Name="minHand" Stroke="Black" X1="50" X2="50" Y1="50" Y2="10" StrokeThickness="2" />
		<Line Name="hourHand" Stroke="Black" X1="50" X2="50" Y1="50" Y2="20" StrokeThickness="2" />
		<Ellipse Name="axle" Fill="Black" Width="5" Height="5" />
	</Grid>
</my:TimeControl>
