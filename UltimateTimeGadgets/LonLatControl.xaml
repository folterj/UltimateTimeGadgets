<my:TimeControl x:Class="UltimateTimeGadgets.LonLatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:my="clr-namespace:UltimateTimeGadgets"
             mc:Ignorable="d">
    <Grid>
		<Label Content="Lon:" Width="35" HorizontalAlignment="Left" />
		<TextBox Text="{Binding lonstring}" Width="45" HorizontalAlignment="Left" Name="lonText" VerticalAlignment="Top" Margin="41,2,0,0">
			<TextBox.Background>
				<SolidColorBrush />
			</TextBox.Background>
		</TextBox>
		<Label Content="Lat:" Width="35" Margin="92,0,0,0" HorizontalAlignment="Left" />
		<TextBox Text="{Binding latstring}" Width="45" HorizontalAlignment="Left" Name="latText" VerticalAlignment="Top" Margin="129,2,0,0">
			<TextBox.Background>
				<SolidColorBrush />
			</TextBox.Background>
		</TextBox>
	</Grid>
</my:TimeControl>
