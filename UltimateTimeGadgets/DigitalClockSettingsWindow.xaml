<my:SettingsWindow x:Class="UltimateTimeGadgets.DigitalClockSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:my="clr-namespace:UltimateTimeGadgets"
        Title="Digital Clock Settings" mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Height="190" Width="209" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" Closing="Window_Closing" IsVisibleChanged="Window_IsVisibleChanged" Icon="/UltimateTimeGadgets;component/Resources/UltimateTimeGadgets.ico">
    <Grid>
		<Button Content="Ok" HorizontalAlignment="Left" Margin="12,0,0,12" Name="okButton" Width="75" Height="23" VerticalAlignment="Bottom" IsDefault="True" Click="okButton_Click" />
		<Button Content="Cancel" Margin="0,0,14,12" Name="cancelButton" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsCancel="True" Click="cancelButton_Click" />
		<CheckBox Content="24 Hour" Height="16" HorizontalAlignment="Left" Margin="12,20,0,0" Name="hour24Check" VerticalAlignment="Top" Checked="hour24Check_CheckChanged" Unchecked="hour24Check_CheckChanged" />
		<CheckBox Content="Seconds" Height="16" HorizontalAlignment="Left" Margin="12,42,0,0" Name="secondsCheck" VerticalAlignment="Top" Checked="secondsCheck_CheckChanged" Unchecked="secondsCheck_CheckChanged" />
		<CheckBox Content="Leading zero" Height="16" HorizontalAlignment="Left" Margin="12,64,0,0" Name="zerosCheck" VerticalAlignment="Top" Checked="zerosCheck_CheckChanged" Unchecked="zerosCheck_CheckChanged" />
		<CheckBox Content="UTC time" Height="16" HorizontalAlignment="Left" Margin="12,86,0,0" Name="utcCheck" VerticalAlignment="Top" Checked="utcCheck_CheckChanged" Unchecked="utcCheck_CheckChanged" />
	</Grid>
</my:SettingsWindow>
