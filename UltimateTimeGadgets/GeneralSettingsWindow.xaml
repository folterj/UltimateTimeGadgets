<Window x:Class="UltimateTimeGadgets.GeneralSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="General Settings" ResizeMode="CanMinimize" Closing="Window_Closing" IsVisibleChanged="Window_IsVisibleChanged" Icon="/UltimateTimeGadgets;component/Resources/UltimateTimeGadgets.ico" Height="182" Width="206">
    <Grid>
		<Label Content="Gadgets Style" Height="28" HorizontalAlignment="Left" Margin="12,10,0,0" Name="label1" VerticalAlignment="Top" />
		<ComboBox Height="23" HorizontalAlignment="Left" Margin="101,12,0,0" Name="styleCombo" VerticalAlignment="Top" Width="73" IsEditable="True" IsReadOnly="True" />
		<CheckBox Content="Lock Gadgets" Height="16" HorizontalAlignment="Left" Margin="12,41,0,0" Name="lockedCheck" VerticalAlignment="Top" />
		<CheckBox Content="Show Gadgets on top" Height="16" HorizontalAlignment="Left" Margin="12,63,0,0" Name="onTopCheck" VerticalAlignment="Top" />
		<CheckBox Content="Start with Windows" Height="16" HorizontalAlignment="Left" Margin="12,85,0,0" Name="startupCheck" VerticalAlignment="Top" />
		<Button Content="Ok" IsDefault="True" Margin="12,0,0,10" Name="okButton" Click="okButton_Click" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" />
		<Button Content="Cancel" Height="23" HorizontalAlignment="Right" IsCancel="True" Margin="0,0,12,10" Name="cancelButton" VerticalAlignment="Bottom" Width="75" Click="cancelButton_Click" />
	</Grid>
</Window>
